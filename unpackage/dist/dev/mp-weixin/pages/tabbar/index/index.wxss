.main {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  height: 100%;
}
.main .header {
  height: 80rpx;
  width: 100%;
  background-color: #FF9500;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.main .header .position {
  height: 80rpx;
  margin-left: 20rpx;
  width: 60%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.main .header .position .text {
  width: 80%;
  margin-left: 10rpx;
  color: white;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-size: 30rpx;
  line-height: 80rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.main .header .message {
  position: fixed;
  right: 20rpx;
}
.main .search {
  width: 100%;
  height: 80rpx;
  background-color: #FF9500;
}
.main .search .input {
  width: 710rpx;
  margin-left: 20rpx;
}

